{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LandlyLandingSchema",
  "type": "object",
  "required": ["pages"],
  "properties": {
    "version": {
      "type": "string",
      "maxLength": 32
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "theme": {
      "type": "object",
      "properties": {
        "palette": {
          "type": "object",
          "properties": {
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "accent": { "type": "string" },
            "background": { "type": "string" },
            "text": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    },
    "pages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "title", "blocks"],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "description": {
            "type": "string",
            "maxLength": 240
          },
          "blocks": {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/definitions/block" }
          }
        },
        "additionalProperties": true
      }
    },
    "payment": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "maxLength": 2048
        },
        "buttonText": {
          "type": "string",
          "maxLength": 48
        }
      },
      "additionalProperties": true
    }
  },
  "definitions": {
    "block": {
      "type": "object",
      "required": ["type", "props"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "order": {
          "type": "integer",
          "minimum": 0
        },
        "props": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
