# Application
APP_ENV=development
HTTP_ADDR=:8080

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# PostgreSQL
POSTGRES_DSN=postgres://landly:landly@localhost:5432/landly?sslmode=disable

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# S3 Storage (MinIO for local, or any S3-compatible)
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=landly-sites
S3_USE_SSL=false
CDN_BASE=http://localhost:9000/landly-sites

# AI Provider (mock | openai | anthropic | yandex)
AI_PROVIDER=mock
AI_API_KEY=

# Temporary directory for builds
TMP_DIR=/tmp/landly

# Monitoring (optional)
SENTRY_DSN=
